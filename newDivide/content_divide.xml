<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:paddingLeft="0dp">

        <ImageView
            android:id="@+id/person_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="16dp"
            app:srcCompat="@drawable/switch_thumb"/>

        <TextView
            android:id="@+id/str_i_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/person_img"
            android:layout_alignLeft="@+id/person_img"
            android:layout_alignTop="@+id/person_img"
            android:layout_alignEnd="@+id/person_img"
            android:layout_alignRight="@+id/person_img"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="아영"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:typeface="sans" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_weight="40"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteX="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/str_i_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="공금사용액" />

                <TextView
                    android:id="@+id/str_i_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="개인사용액" />

                <TextView
                    android:id="@+id/str_i_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#3252f4"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="남은 금액" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/str_i_publicprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:text="공적사용금액" />

                <TextView
                    android:id="@+id/str_i_privateprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:text="사적사용금액" />

                <TextView
                    android:id="@+id/str_i_leftprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:textSize="18dp"
                    android:textColor="#3252f4"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="분할금액" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
