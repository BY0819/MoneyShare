<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:paddingLeft="0dp">

        <ImageView
            android:id="@+id/person_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="16dp"
            app:srcCompat="@drawable/switch_thumb" />

        <TextView
            android:id="@+id/str_i_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/person_img"
            android:layout_alignLeft="@+id/person_img"
            android:layout_alignTop="@+id/person_img"
            android:layout_alignEnd="@+id/person_img"
            android:layout_alignRight="@+id/person_img"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="아영"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:typeface="sans" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/str_i_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="날짜" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/str_i_use1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="항목1" />

                <TextView
                    android:id="@+id/str_i_use2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="항목2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/str_i_price1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:text="가격1" />

                <TextView
                    android:id="@+id/str_i_price2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:text="가격2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
